<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spykexx.salarycalculator.options_dialog">

    <EditText
        android:id="@+id/etPostTax"
        android:layout_width="190dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="numberDecimal"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/etMedIns"
        app:layout_constraintTop_toBottomOf="@+id/etRetire" />

    <EditText
        android:id="@+id/etRetire"
        android:layout_width="190dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="numberDecimal"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/etMedIns"
        app:layout_constraintTop_toBottomOf="@+id/etFlexSpend" />

    <EditText
        android:id="@+id/etFlexSpend"
        android:layout_width="190dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="numberDecimal"

        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/etMedIns"
        app:layout_constraintTop_toBottomOf="@+id/etLifeIns" />

    <EditText
        android:id="@+id/etLifeIns"
        android:layout_width="190dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="16sp"

        app:layout_constraintStart_toStartOf="@id/etMedIns"
        app:layout_constraintTop_toBottomOf="@+id/etMedIns" />

    <Spinner
        android:id="@+id/spState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_row="1"
        android:entries="@array/State"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbMarried" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_row="2"
        android:text="Deductions"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spState" />

    <CheckBox
        android:id="@+id/cbMarried"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:layout_row="0"
        android:text="Married"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butSave"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:layout_row="4"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Medical Insurance:"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/etMedIns"
        android:layout_width="190dp"
        android:layout_height="39dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="122dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Life Insurance:"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Flexible Spending:"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Retirement:"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Post-Tax:"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

</android.support.constraint.ConstraintLayout>
